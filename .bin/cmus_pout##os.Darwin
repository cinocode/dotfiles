#!/usr/bin/env bash
SOURCE_MUS="/Users/ole/Music/"
CMUS_PL_DIR="/Users/ole/.config/cmus/playlists"

mkdir -p "${SOURCE_MUS}Playlists"
rm -rf "${SOURCE_MUS}Playlists"
cp -r "${CMUS_PL_DIR}" "${SOURCE_MUS}Playlists"
find "${SOURCE_MUS}Playlists" -type f -iname '*.m3u' -exec sed -i 's/\/Users\/ole\/Music/\.\./g' '{}' ';'

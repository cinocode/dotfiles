<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <servers>
        <server>
            <id>lht-snapshot-local</id>
            <username>{EBASE_USERNAME}</username>
            <password>{ENCRYPTED_EBASE_PASSWORD}</password>
        </server>
        <server>
            <id>lht-release-repos</id>
            <username>{EBASE_USERNAME}</username>
            <password>{ENCRYPTED_EBASE_PASSWORD}</password>
        </server>
        <server>
            <id>remote-repos</id>
            <username>{EBASE_USERNAME}</username>
            <password>{ENCRYPTED_EBASE_PASSWORD}</password>
        </server>
        <server>
            <id>artifactory-proxy</id>
            <username>{EBASE_USERNAME}</username>
            <password>{ENCRYPTED_EBASE_PASSWORD}</password>
        </server>
    </servers>
    <proxies>
    </proxies>
    <mirrors>
        <mirror>
            <id>artifactory-proxy</id>
            <name>LHT Artifactory Proxy</name>
            <mirrorOf>external:*,!lht-release-repos,!lht-snapshot-local,!lht-release-local</mirrorOf>
            <url>https://lht.app.lufthansa.com/artifactory/remote-repos/</url>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>artifactoryProfile</id>
            <properties>
                <snapshot.repo.url>https://lht.app.lufthansa.com/artifactory/lht-snapshot-local/</snapshot.repo.url>
                <release.repo.url>https://lht.app.lufthansa.com/artifactory/lht-release-local/</release.repo.url>
                <sonar.host.url>https://lht.app.lufthansa.com/sonar</sonar.host.url>
            </properties>
            <repositories>
                <repository>
                    <id>lht-snapshot-local</id>
                    <name>LHT Artifactory Snapshots</name>
                    <url>https://lht.app.lufthansa.com/artifactory/lht-snapshot-local/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>lht-release-repos</id>
                    <name>LHT Artifactory Releases</name>
                    <url>https://lht.app.lufthansa.com/artifactory/lht-release-repos/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>remote-repos</id>
                    <name>LHT Artifactory Proxied Repositories</name>
                    <url>https://lht.app.lufthansa.com/artifactory/remote-repos/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>remote-repos</id>
                    <name>LHT Artifactory Proxied Repositories</name>
                    <url>https://lht.app.lufthansa.com/artifactory/remote-repos/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>artifactoryProfile</activeProfile>
    </activeProfiles>
</settings>
